{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@common/*": ["src/common/*"],
      "@store": ["src/renderer/redux/store"],
      "@hooks": ["src/renderer/redux/hooks"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.(test|spec).ts", "tests/**/*"]
}
